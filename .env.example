# ========================================
# DES Trading System V2.0 環境變數範例
# ========================================
# 複製此檔案為 .env 並填入實際值

# ========================================
# Binance API 配置
# ========================================
# 從 Binance 帳戶取得 API Key 和 Secret
# https://www.binance.com/en/my/settings/api-management

BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here

# API 基礎 URL (通常不需要修改)
BINANCE_BASE_URL=https://api.binance.com

# ========================================
# 交易配置
# ========================================
# 交易模式: spot (現貨) 或 futures (合約)
TRADING_MODE=spot

# 是否啟用實盤交易 (false=模擬模式)
ENABLE_LIVE_TRADING=false

# ========================================
# 風險管理
# ========================================
# 單筆訂單最大金額 (USD)
MAX_ORDER_SIZE=1000

# 帳戶最大總倉位 (USD)
MAX_TOTAL_POSITION=10000

# 最大槓桿倍數 (僅合約交易)
MAX_LEVERAGE=3

# ========================================
# 系統配置
# ========================================
# 服務監聽端口
HTTP_PORT=8080
GRPC_PORT=50051

# 日誌級別: debug, info, warn, error
LOG_LEVEL=info

# 資料庫路徑
DB_PATH=./data/trading.db

# ========================================
# Python 策略配置
# ========================================
# Python 執行檔路徑 (留空則使用系統預設)
PYTHON_PATH=

# 策略執行間隔 (秒)
STRATEGY_INTERVAL=60

# ========================================
# 告警配置 (選填)
# ========================================
# Telegram Bot Token
TELEGRAM_BOT_TOKEN=

# Telegram Chat ID
TELEGRAM_CHAT_ID=

# Email 通知
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
ALERT_EMAIL=
